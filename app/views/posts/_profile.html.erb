<div class="column is-one-quarter">
  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-48x48">
            <img src="https://bulma.io/images/placeholders/48x48.png" alt="Placeholder image">
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-4"><%= current_member.name %></p>
          <p class="subtitle is-6"><%= current_member.username %></p>
        </div>
      </div>

      <div class="panel-block">
        <div class="level is-mobile">
          <div class="level-item has-centered-text">
            <div>
              <p class="heading">Posts</p>
              <p class="title is-6"><%= current_member.posts.count %></p>
            </div>
          </div>
          <div class="level-item has-centered-text">
            <div>
              <p class="heading">Following</p>
              <p class="title is-6">45</p>
            </div>
          </div>
          <div class="level-item has-centered-text">
            <div>
              <p class="heading">Followers</p>
              <p class="title is-6">333K</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
