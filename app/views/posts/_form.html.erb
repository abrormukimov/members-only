<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :post, label: "Create Post", placeholder: "Compose a new post",
                  input_html: { class: "textarea" }, wrapper: false,
                  label_html: { class: "label" } %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-dark" %>
<% end %>
