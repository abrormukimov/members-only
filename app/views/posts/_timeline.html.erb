<div class="column horizontal-center is-half">
  <% if member_signed_in? %>
  <article class="media box">
    <figure class="media-left">
      <article class="media box">
      <p class="image is-64x64">
        <%= gravatar_image_tag(current_member.email, size: 64, alt: current_member.name) %>
      </p>
    </figure>
    <div class="media-content">
      <%= render 'posts/form' %>
    </div>
  </article>
  <% end %>
  <% @posts.each do |post| %>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <%= gravatar_image_tag(post.member.email, size: 64, alt: post.member.name) %>
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <strong><%= post.member.name %></strong><br>
            <small><%= post.member.username %></small><br>
            <p><%= post.post %></p>
          </div>

          <% if member_signed_in? %>
            <nav class="level">
              <div class="level-left is-mobile">
                <%= link_to post, class: "level-item" do %>
                  <span class="icon">
                    <i class="fa fa-link" aria-hidden="true"></i>
                  </span>
                <% end %>
                <%= link_to edit_post_path(post), class: "level-item" do %>
                  <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                <% end %>
                <%= link_to post, method: :delete, data: { confirm: "Would you like to delete this tweet?" } do %>
                  <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                <% end %>
              </div>
            </nav>
          <% end %>
        </div>
      </article>
    </div>
  <% end %>
</div>
