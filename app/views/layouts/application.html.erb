<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-primary global-notification">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="notification is-danger global-notification">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>
    <nav class="navbar is-light">
      <div class="navbar-brand">
        <%= link_to root_path, class: 'navbar-item' do %>
          <h1 class="title is-5">dilafroz</h1>
        <% end %>
        <div class="navbar-burger burger" data-target="navbarExample">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>
      <div id="navbarExample" class="navbar-menu">
        <div class="navbar-end">
          <div class="field is-grouped align-centering right-margin-for-signup">
            <p class="control">
              <%= link_to 'New Post', new_post_path, class: "button is-danger is-inverted" %>
            </p>
            <% if member_signed_in? %>
              <p class="control">
                <%= link_to current_member.name, edit_member_registration_path, class: "button is-dark"%>
              </p>
              <p>
                <%= link_to "Log out", destroy_member_session_path, method: :delete, class: "button is-dark"%>
              </p>
            <% else %>
              <p class="control">
                <%= link_to "Sign In", new_member_session_path, class: "button is-dark"%>
              </p>
            <p class="control">
              <%= link_to "Sign Up", new_member_registration_path, class: "button is-dark"%>
            </p>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
